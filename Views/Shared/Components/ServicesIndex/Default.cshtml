@model List<ZafarCoursesWebApp.Areas.Admin.Models.Service>
@foreach (var item in Model)
{
    <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6">
        <div class="course__item white-bg mb-30 fix">
            <div class="course__thumb w-img p-relative fix" style="max-height:223px;">
                <a asp-action="Details" asp-controller="Services" asp-route-id="@item.Id">
                    <img src="~/uploads/@item.ServicePicture" alt="">
                </a>
                <div class="course__tag">
                    <a href="#">@item.Name</a>
                </div>
            </div>
            <div class="course__content">
                <div class="course__meta d-flex align-items-center justify-content-between">
                    <div class="course__lesson">
                        <span><i class="far fa-book-alt"></i>@item.ServiceInfo.LectureCount Dərs</span>
                    </div>
                </div>
                <h3 class="course__title"><a asp-action="Details" asp-controller="Services" asp-route-id="@item.Id">@item.ServiceInfo.Header</a></h3>
                <div class="course__teacher d-flex align-items-center">
                    <div class="course__teacher-thumb mr-15">
                        <img src="~/uploads/@item.Teachers.FirstOrDefault().PictureSource" alt="">
                    </div>
                    <h6><a>@item.Teachers.FirstOrDefault().Name @item.Teachers.FirstOrDefault().Surname</a></h6>
                </div>
            </div>
            <div class="course__more d-flex justify-content-between align-items-center">
                <div class="course__btn">
                    <a asp-action="Details" asp-controller="Services" asp-route-id="@item.Id" class="link-btn">
                        Detallar
                        <i class="far fa-arrow-right"></i>
                        <i class="far fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
}
