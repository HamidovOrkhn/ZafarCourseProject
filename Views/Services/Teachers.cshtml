@model List<ZafarCoursesWebApp.Areas.Admin.Models.Teacher>
@{ Layout = "~/Views/Shared/_Layout1.cshtml"; }

<section class="page__title-area page__title-height page__title-overlay d-flex align-items-center" href="/assets/img/page-title/page-title.jpg" style="background-image: url(@Href("~/assets/img/page-title/page-title.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-xxl-12">
                <div class="page__title-wrapper mt-110">
                    <h3 class="page__title">Kurslarımız</h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Ana Səhifə</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Müəllimlər</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="teacher__area pt-115 pb-110">
    <div class="container">
        <div class="row">
            <div class="col-xxl-6 offset-xxl-3">
                <div class="section__title-wrapper text-center mb-60">
                    <h2 class="section__title">
                        <span class="yellow-bg"> Müəllimlərimiz <img src="~/assets/img/shape/yellow-bg-2.png" alt="">  </span> <br>
                    </h2>
                    <p>Digər kurslara müraciət üçün qaynar xəttimizlə əlaqə saxlayın.</p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
<div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6">
    <div class="teacher__item text-center grey-bg-5 transition-3 mb-30">
        <div class="teacher__thumb w-img fix">
            <a href="#">
                <img class="circle" src="~/uploads/@item.PictureSource" alt="">
            </a>
        </div>
        <div class="teacher__content">
            <h3 class="teacher__title">@item.Name @item.Surname</h3>,
            <span>@item.Category.Name</span>
        </div>
    </div>
</div>            }
        </div>
    </div>
</section>